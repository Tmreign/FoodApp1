<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.SplashActivity"
    android:background="@color/colorBackground">





    <TextView
        android:id="@+id/textrot"
        android:layout_width="173dp"
        android:layout_height="96dp"
        android:text="Meal"
        android:textColor="@color/colorPrimary"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_icons"
        app:layout_constraintStart_toStartOf="@+id/iv_icons" />

    <ImageView
        android:id="@+id/iv_icons"
        android:layout_width="250dp"
        android:layout_height="235dp"
        android:src="@drawable/dish"
        app:layout_constraintBottom_toTopOf="@+id/textrot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>